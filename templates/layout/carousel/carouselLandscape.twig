<div class="kgv-carousel--landscape {{ additionalClassNames is defined ?  additionalClassNames }}">
    <div id="{{ carouselId }}" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {% for image in imageList %}
                <div class="carousel-item kgv-carousel-item {{ loop.first ? 'active' : '' }}">
                    <img class="d-block kgv-carousel-item__image" src="{{ image.path }}" alt="{{ image.title }}">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="kgv-carousel-item__title">{{ image.title }}</h5>
                        <p class="kgv-carousel-item__description">{{ image.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a class="carousel-control-prev" href="#{{ carouselId }}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Vorheriges</span>
        </a>

        <a class="carousel-control-next" href="#{{ carouselId }}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">NÃ¤chstes</span>
        </a>
    </div>
</div>