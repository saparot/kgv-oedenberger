<!doctype html>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}
            {% if title %}
                {{ title }}
            {% else %}
                KGV Oedenberger
            {% endif %}
        {% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    {% include 'layout/navigation.html.twig' %}
    {% include 'layout/header-teaser.html.twig' %}
    {% import 'macros/breadcrumb.html.twig' as breadcrumbs %}
    {{ breadcrumbs.render(breadCrumbs) }}

</header>
<main>
    <section class="container">
        <div class="row">
            <div class="col"></div>
        </div>
        <div class="row">
            <div>
                <div class="contain">
                    <div class="row">
                        <div class="col">{% block body %}{% endblock %}</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% include 'layout/footer.html.twig' %}
</body>
</html>
