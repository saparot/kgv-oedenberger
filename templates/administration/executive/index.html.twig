{% extends 'base-administration.html.twig' %}

{% block title %}Admin: Vorstände{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Übersicht Vorstände</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Position</th>
            <th>Auflistung Reihenfolge</th>
            <th>E-Mail</th>
            <th>Telefon</th>
            <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        {% for executive in executives %}
            <tr>
                <td>{{ executive.id }}</td>
                <td>{{ executive.Name }}</td>
                <td>{{ executive.position }}</td>
                <td>{{ executive.sort }}</td>
                <td>{{ executive.email }}</td>
                <td>{{ executive.phone }}</td>
                <td>
                    <a href="{{ path('administrationExecutiveShow', {'id': executive.id}) }}">anzeigen</a>
                    <a href="{{ path('administrationExecutiveEdit', {'id': executive.id}) }}">bearbeiten</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">keine Einträge gefunden</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('administrationExecutiveNew') }}" class="btn btn-primary">neuen Vorstand anlegen</a> #}
{% endblock %}
